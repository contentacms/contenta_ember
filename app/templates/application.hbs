<div class="collections">
        <div class="container">
            <h3>Recipe collections</h3>

            {{#promoted-filter filter=(action 'recipeTags')as |tagList|}}
                    <ul class="grid grid-25">
                        {{#each tagList as |tag|}}
                            <li class="grid-item">
                                {{#link-to 'categories.category' tag.id}}
